# =============================================================================
# Environment Configuration
# =============================================================================

# Application
APP_ENV=development  # development | production
APP_HOST=0.0.0.0
APP_PORT=8058
LOG_LEVEL=INFO

# =============================================================================
# Supabase Configuration
# =============================================================================

# Supabase (local development - use supabase start to get these)
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your-anon-key-from-supabase-start
SUPABASE_SERVICE_KEY=your-service-key-from-supabase-start
SUPABASE_JWT_SECRET=your-jwt-secret-from-supabase-start

# Legacy DATABASE_URL (for asyncpg vector operations)
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# Flag to use Supabase client (default: true)
USE_SUPABASE=true

# =============================================================================
# Supabase Production (uncomment for deployment)
# =============================================================================

# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-production-anon-key
# SUPABASE_SERVICE_KEY=your-production-service-key
# SUPABASE_JWT_SECRET=your-production-jwt-secret

# =============================================================================
# Neo4j (Knowledge Graph)
# =============================================================================

NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Primary LLM (OpenAI, Ollama, Anthropic, etc.)
LLM_PROVIDER=openai
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini
OPENAI_API_KEY=your-openai-api-key

# Alternative: Ollama (local)
# LLM_PROVIDER=ollama
# LLM_BASE_URL=http://localhost:11434/v1
# LLM_MODEL=llama3.2
# LLM_API_KEY=ollama  # Not used but required

# =============================================================================
# Embedding Provider Configuration
# =============================================================================

# Ollama embeddings (local, recommended for development)
EMBEDDING_PROVIDER=ollama
EMBEDDING_BASE_URL=http://localhost:11434/v1
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_API_KEY=ollama  # Not used but required
EMBEDDING_DIMENSIONS=768

# Alternative: OpenAI embeddings
# EMBEDDING_PROVIDER=openai
# EMBEDDING_BASE_URL=https://api.openai.com/v1
# EMBEDDING_MODEL=text-embedding-3-small
# EMBEDDING_API_KEY=your-openai-api-key
# EMBEDDING_DIMENSIONS=1536

# =============================================================================
# Graphiti (Knowledge Graph Builder)
# =============================================================================

GRAPHITI_LLM_BASE_URL=https://api.openai.com/v1
GRAPHITI_LLM_MODEL=gpt-4o-mini
GRAPHITI_API_KEY=your-openai-api-key
